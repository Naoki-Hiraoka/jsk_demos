#!/usr/bin/env roseus

(ros::load-ros-manifest "roseus")
(ros::roseus "send_motion")

(defclass string-cb-class
  :super propertied-object
  :slots ())
(defmethod string-cb-class
  (:init () (ros::subscribe "controller" std_msgs::string #'send self :string-cb))
  (:string-cb (msg)
	      (let ((str (send msg :data))) 
		(ros::ros-info (format nil str))
		(when (equal str "look-up")
		  (send *pr2* :head :neck-p :joint-angle (+ (send *pr2* :head :neck-p :joint-angle) 5))
		  (send *ri* :angle-vector (send *pr2* :angle-vector)))
		(when (equal str "look-down")
		  (send *pr2* :head :neck-p :joint-angle (- (send *pr2* :head :neck-p :joint-angle) 5))
		  (send *ri* :angle-vector (send *pr2* :angle-vector)))
		(when (equal str "look-right")
		  (send *pr2* :head :neck-y :joint-angle (- (send *pr2* :head :neck-y :joint-angle) 5))
		  (send *ri* :angle-vector (send *pr2* :angle-vector)))
		(when (equal str "look-left")
		  (send *pr2* :head :neck-y :joint-angle (+ (send *pr2* :head :neck-y :joint-angle) 5))
		  (send *ri* :angle-vector (send *pr2* :angle-vector)))
		(when (equal str "move-forward")
		  (send *pr2* :move-to (send (make-coords :pos #f(10 0 0)) :transform (send *pr2* :worldcoords) :world) :world)
		  (send *ri* :move-to (send *pr2* :worldcoords) :frame-id "eng2"))
		(when (equal str "move-backward")
		  (send *pr2* :move-to (send (make-coords :pos #f(-10 0 0)) :transform (send *pr2* :worldcoords) :world) :world)
		  (send *ri* :move-to (send *pr2* :worldcoords) :frame-id "eng2"))
		(when (equal str "move-right")
		  (send *pr2* :move-to (send (make-coords :pos #f(0 -10 0)) :transform (send *pr2* :worldcoords) :world) :world)
		  (send *ri* :move-to (send *pr2* :worldcoords) :frame-id "eng2"))
		(when (equal str "move-left")
		  (send *pr2* :move-to (send (make-coords :pos #f(0 10 0)) :transform (send *pr2* :worldcoords) :world) :world)
		  (send *ri* :move-to (send *pr2* :worldcoords) :frame-id "eng2"))
		(when (equal str "turn-right")
		  (send *pr2* :move-to (send (send *pr2* :copy-worldcoords) :rotate (/ -pi 36) :z :world) :world)
		  (send *ri* :move-to (send *pr2* :worldcoords) :frame-id "eng2"))
		(when (equal str "turn-left")
		  (send *pr2* :move-to (send (send *pr2* :copy-worldcoords) :rotate (/ pi 36) :z :world) :world)
		  (send *ri* :move-to (send *pr2* :worldcoords) :frame-id "eng2"))
		(when (equal str "update")
		  (send *pr2* :angle-vector (send *ri* :state :potentio-vector)))
		(when (equal str "hand-up")
		  (send *pr2* :rarm :inverse-kinematics (send (send (send *pr2* :rarm :end-coords :copy-worldcoords) :transform (make-coords :pos (send (send (cadr (send *pr2* :head)) :worldcoords) :rotate-vector #f(0 0 10))) :world) :replace-coords (send (cadr (send *pr2* :head)) :worldrot)))
		  (send *ri* :angle-vector (send *pr2* :angle-vector))
		  )
		(when (equal str "hand-down")
		  (send *pr2* :rarm :inverse-kinematics (send (send (send *pr2* :rarm :end-coords :copy-worldcoords) :transform (make-coords :pos (send (send (cadr (send *pr2* :head)) :worldcoords) :rotate-vector #f(0 0 -10))) :world) :replace-coords (send (cadr (send *pr2* :head)) :worldrot)))
		  (send *ri* :angle-vector (send *pr2* :angle-vector))
		  )
		(when (equal str "hand-right")
		  (send *pr2* :rarm :inverse-kinematics (send (send (send *pr2* :rarm :end-coords :copy-worldcoords) :transform (make-coords :pos (send (send (cadr (send *pr2* :head)) :worldcoords) :rotate-vector #f(0 -10 0))) :world) :replace-coords (send (cadr (send *pr2* :head)) :worldrot)))
		  (send *ri* :angle-vector (send *pr2* :angle-vector))
		  )
		(when (equal str "hand-left")
		  (send *pr2* :rarm :inverse-kinematics (send (send (send *pr2* :rarm :end-coords :copy-worldcoords) :transform (make-coords :pos (send (send (cadr (send *pr2* :head)) :worldcoords) :rotate-vector #f(0 10 0))) :world) :replace-coords (send (cadr (send *pr2* :head)) :worldrot)))
		  (send *ri* :angle-vector (send *pr2* :angle-vector))
		  )
		(when (equal str "hand-forward")
		  (send *pr2* :rarm :inverse-kinematics (send (send (send *pr2* :rarm :end-coords :copy-worldcoords) :transform (make-coords :pos (send (send (cadr (send *pr2* :head)) :worldcoords) :rotate-vector #f(10 0 0))) :world) :replace-coords (send (cadr (send *pr2* :head)) :worldrot)))
		  (send *ri* :angle-vector (send *pr2* :angle-vector))
		  )
		(when (equal str "hand-backward")
		  (send *pr2* :rarm :inverse-kinematics (send (send (send *pr2* :rarm :end-coords :copy-worldcoords) :transform (make-coords :pos (send (send (cadr (send *pr2* :head)) :worldcoords) :rotate-vector #f(-10 0 0))) :world) :replace-coords (send (cadr (send *pr2* :head)) :worldrot)))
		  (send *ri* :angle-vector (send *pr2* :angle-vector))
		  )
	      )))
(setq m (instance string-cb-class :init))
(ros::rate 10)
(do-until-key
 (ros::spin-once)
 (send *irtviewer* :look-all *pr2*)
 (x::window-main-one)
 )
